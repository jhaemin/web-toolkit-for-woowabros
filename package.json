{
  "name": "web-toolkit",
  "version": "1.0.0",
  "description": "All-in-one browser extension",
  "scripts": {
    "dev:bun": "bun --watch run scripts/build.ts --dev",
    "dev": "run-p dev:bun typecheck:watch",
    "build": "bun run typecheck && bun run scripts/build.ts",
    "test": "bun test",
    "dev:debug:release-notes": "bun run dev:bun --debug-release-notes",
    "format": "biome format --write",
    "lint": "biome lint",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch --preserveWatchOutput",
    "version": "bun scripts/version.js",
    "archive": "node scripts/archive.js"
  },
  "keywords": ["Browser Extension", "Web Toolkit"],
  "author": "Jang Haemin",
  "license": "MIT",
  "dependencies": {
    "@biomejs/js-api": "^0.7.1",
    "@nanostores/logger": "^0.4.0",
    "@nanostores/react": "^0.8.4",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/themes": "^3.2.1",
    "browser-extension-url-match": "^1.2.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "fuzzy": "^0.1.3",
    "fuzzysort": "^3.1.0",
    "lucide-react": "^0.477.0",
    "minmax.js": "^1.0.0",
    "nanoid": "^5.1.2",
    "nanostores": "^0.11.4",
    "react": "^19.0.0",
    "react-children-utilities": "^2.10.0",
    "react-dom": "^19.0.0",
    "remeda": "^2.21.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/archiver": "^6.0.3",
    "@types/bun": "^1.2.4",
    "@types/chrome": "^0.0.308",
    "@types/node": "^22.13.9",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/webextension-polyfill": "^0.12.3",
    "archiver": "^7.0.1",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "enquirer": "^2.4.1",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "sass": "^1.85.1",
    "typescript": "^5.8.2"
  }
}
